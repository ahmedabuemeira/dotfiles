[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[user]
	name = Karim Mansour
	email = karim.mansour@booking.com
[pack]
	windowMemory = 100m
	SizeLimit = 100m
	threads = 1
[color]
	ui = true
[core]
	editor = mate -w
[alias]
	hist = log --all --graph --decorate --oneline
	s  = status
 	st = status
 	ci = commit
 	co = checkout
	d  = diff
 	dc = diff --cached
 	amend = commit --amend

	clear-merges = !git branch -d `git branch --merged | grep -v \"^*\" | tr -d \"\\n\"`
[push]
	default = current
[pull]
	rebase = true
	default = current
[color]
 	ui = auto
	autocrlf = false
	excludesfile = ~/.gitignore
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = cyan
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
